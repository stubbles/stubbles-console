#!/usr/bin/php
<?php
/**
 * Script to execute org\stubbles\console\scripts\creator\ConsoleAppCreator.
 *
 * @package  net\stubbles\console
 */
namespace org\stubbles\console\scripts\creator;
if (\Phar::running() !== '') {
    $rootDir     = \Phar::running();
    $projectPath = getcwd();
} elseif (file_exists(__DIR__ . '/../vendor/autoload.php')) {
    $rootDir     = __DIR__ . '/../';
    $projectPath = $rootDir;
} else {
    $rootDir     = __DIR__ . '/../../../../';
    $projectPath = $rootDir;
}

require $rootDir . '/vendor/autoload.php';
exit(ConsoleAppCreator::main($projectPath, \net\stubbles\console\ConsoleOutputStream::forError()));
?>